<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rellogout"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.minimaldev.android.facerec.LogOutActivity">


    <TextView
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:text="Name"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:gravity="left"
            android:text="Welcome"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold" />

        <RelativeLayout

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="8dp">


            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/roundedcorner"
                app:cardCornerRadius="20dp"
                android:shape="ring"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="3dp">


                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop">

                </ImageView>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/welocmetofageo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_marginBottom="16dp"
        android:text="So, What's next ?"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welocmetofageo"
        android:gravity="center_horizontal">

    <Button
        android:id="@+id/logoutbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK OUT"
        android:padding="12dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/roundedcorner"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/welocmetofageo"
        android:layout_marginTop="20dp"
        android:gravity="center" />


    <Button
        android:id="@+id/attend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance"
        android:padding="16dp"
        android:background="@drawable/roundedcorner"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/welocmetofageo"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="attend"
        android:layout_toRightOf="@id/logoutbutton"/>

    </LinearLayout>
</RelativeLayout>
